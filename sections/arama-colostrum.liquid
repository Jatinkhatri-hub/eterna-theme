<section class="arama-colostrum">
  <div class="container">
    <div class="questionrama">
      <h3>{{ section.settings.que }}</h3>
      <div class="img-sec">
        <img src="{{ section.settings.que_image | img_url: 'master' }}" width="100%" height="100%">
      </div>
      <div class="content-text">
        {% for block in section.blocks %}
         
          {% if block.settings.paragraph != blank %}
            <div class="content-data">
              <p>{{ block.settings.paragraph }}</p>
            </div>
          {% endif %}
           {% if block.settings.image_block != blank %}
            <div class="sec-img">
              <img src="{{ block.settings.image_block | img_url: "master" }}" width="100%" height="100%">
            </div>
          {% endif %}
          {% endfor %}
      </div>
      <div class="button-pecent">
        <a href="javascript:void(0)" class="cta btn">{{ section.settings.button_name }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "arama-colostrum",
    "settings": [
      {
        "type": "text",
        "id": "que",
        "label": "Question"
      },
      {
        "type": "image_picker",
        "id": "que_image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "button_name",
        "label": "Button Name"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "blocks":[
      {
        "type": "blocks",
        "name": "Blocks",
        "settings": [
          {
            "type": "text",
            "id": "paragraph",
            "label": "content"
          },
          {
            "type": "image_picker",
            "id": "image_block",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}