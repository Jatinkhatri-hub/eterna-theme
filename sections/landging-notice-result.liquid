<section class="notice-result">  
  <div class="carlos-container carlos-x-padding pb-theme pt-theme">
    <div class="notove-heading">
      {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
        {% endif %}
    </div>
    <div class="timeline mobile-view">
    <ul>
      {% for block in section.blocks %}
      <li><div class="notice-wrap">
              <h1>{{ block.settings.number }}<span>{{ block.settings.years }}</span></h1>
              <p>{{ block.settings.review }}</p>
            </div></li>
        {% endfor %}
    </ul>
  </div>
    <div class="carlos-flex desktop">
      <div class="slider-notice">
        {% for block in section.blocks %}
          <div class="notice-wrap">
            <h1>{{ block.settings.number }}<span>{{ block.settings.years }}</span></h1>
            <p>{{ block.settings.review }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Notice Result",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "review",
        "settings": [
          {
            "type": "text",
            "id": "number",
            "label": "number"
          },
          {
            "type": "text",
            "id": "years",
            "label": "Years"
          },
          {
            "type": "text",
            "id": "review",
            "label": "Review"
          }
        ]
      }
    ]
  }
{% endschema %}