{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{section.id}}-padding mystry-gift-div color-{{ section.settings.color_scheme }}">
  <div class="mystry-box">
    <div class="box-img">
      <img src="{{ section.settings.mystry_box_img | img_url : 'original' }}">
    </div>
    <div class="mystry-box-content">
      <h3 class="mystry-box-title">{{ section.settings.mystry_box_title }}</h3>
      <p class="mystry-box-para">{{ section.settings.mystry_box_para }}</p>
    </div>
  </div>
</div>
<style>
  .mystry-box {
    max-width: 1200px;
    width: 100%;
    height: fit-content;
    border: 4px solid #005664;
    display: none;
    gap: 36px;
    margin: auto;
    padding: 27.06px 43.97px;
    align-items: center;
    background-color: #005664;
    border-radius: 15px;
    overflow: hidden;
  }
  .box-img {
    width: 340px;
    height: 290px;
    /* height: fit-content; */
    display: flex;
    align-items: center;
    justify-content: center;
    background: #458591;
    border-radius: 50%;
  }
  .box-img img {
    width: 250px;
  }
  .mystry-box-content {
    width: 80%;
    height: fit-content;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 13.53px;
  }
  .mystry-box-title {
    font-size: 38px;
    /* font-weight: 700; */
    line-height: 26px;
    color: white;
    margin: 0;
    font-family: 'Sailec Bold' !important;
  }
  .mystry-box-para {
    font-size: 22px;
    /* font-weight: 400; */
    line-height: 26px;
    color: white;
    margin: 0;
    font-family: 'Sailec Medium' !important;
  }
  @media (min-width: 319px) and (max-width: 520px) {
    .mystry-box {
      width: 80%;
      max-width: 300.63px;
      flex-direction: column;
      padding: 13.01px 0;
      gap: 0px;
      
    }
    .box-img {
      width: 40%;
      height: fit-content;
    }
    .mystry-box-content {
      width: 95%;
      align-items: center;
      gap: 0px;
    }
    .mystry-box-title {
      font-size: 17.88px;
      line-height: 28px;
      text-align: center;
    }
    .mystry-box-para {
      font-size: 14.63px;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Mystry Gift",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "color scheme"
    },
    {
      "type": "image_picker",
      "id": "mystry_box_img",
      "label": "image"
    },
    {
      "type": "text",
      "id": "mystry_box_title",
      "label": "title",
      "default": "Free Mystry Gift With Six-Bottle Orders"
    },
    {
      "type": "textarea",
      "id": "mystry_box_para",
      "label": "paragraph",
      "default": "$59 Value. #1 Best-Seller And Perfect Addition To ReActivate For Improving Moisture, Bounce, and Glow."
    }
  ],
  "presets": [
    {
      "name": "Mystry Gift"
    }
  ]
}
{% endschema %}
