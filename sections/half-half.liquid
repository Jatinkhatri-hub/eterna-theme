{% style %}
  
  .ingredients_leftside {
    width: 50%;
    height: 500px;
  }

  .carlos-flex .anchor_single_slider_ah {
    width: 50%;
    height: 500px;
  }
  .carlos-flex .anchor_single_slider_ah a.half-half-slide {
      display: block;
      width: 100%;
      height: 100%;
  }

  @media (max-width: 768px) {
    .ingredients_leftside {
      height: 300px;
    }

    .carlos-flex.carlos-flex-wrap.half-half-slider.slick-initialized.slick-slider.slick-dotted {
      display: block!important;
    }
    .carlos-flex.carlos-flex-wrap.half-half-slider.slick-initialized.slick-slider.slick-dotted .slick-track {
      display: flex;
        /* width: 100%!important; */
    }
    .carlos-flex .anchor_single_slider_ah {
      width: 100%;
      height: 300px;
    }
  }
{% endstyle %}
<div id="{{ section.id }}" class="carlos-w-full">
  <div class="carlos-flex carlos-flex-wrap half-half-slider">
    {% for block in section.blocks %}
      <div class="anchor_single_slider_ah">
      <{% if block.settings.link %}a href="{{ block.settings.link }}"{% else %}div{% endif %} class="carlos-relative half-half-slide ingredients_leftside" style="background:url({{ block.settings.image | img_url: "master" }});background-repeat: no-repeat; background-size: cover;">
        
        <div
          class="carlos-x-padding pt-theme pb-theme carlos-absolute carlos-top-0 carlos-text-white carlos-flex carlos-flex-column carlos-space-between half-half-inside">
          <div>
            <div class="carlos-border carlos-text-nc-md arrow-left" style="padding: 5px; width: fit-content">
              {{ block.settings.top }}
            </div>
            <div class="carlos-text-nc-md arrow-left arrow-left-none" style="padding: 5px; width: fit-content">
              {{ block.settings.bottom }}
            </div>
          </div>
          <div>
            <div class="carlos-text-nc-sm">
            {{ block.settings.text }}
            </div>
            <div
              class="carlos-btn-white carlos-btn-arrow"
              href="{{ block.settings.link }}"
              style="display: inline-block; margin-top: 15px;">
              {{ block.settings.button_text }}
            </div>
          </div>
        </div>
      </{% if block.settings.link %}a{% else %}div{% endif %}>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .carlos-text-nc-sm {
    font-size: 25px;
  }

  .carlos-text-nc-md {
    font-size: 40px;
  }
  
  .arrow-left:before {
    content: " â†’";
  }

  .arrow-left-none:before {
    opacity: 0;
  }

  .half-half-inside {
    width: 100%;
    height: 100%;
  }

  .half-half-image {
    aspect-ratio: 1.25;
    min-height: 500px;
    max-height: 550px;
  }

  @media (max-width: 768px) {
    .carlos-text-nc-sm {
      font-size: 15px;
    }

    .carlos-text-nc-md {
      font-size: 30px;
    }
    
    .half-half-image {
      aspect-ratio: 0.65;
      border-radius: 10px;
    }
  }
</style>


{% schema %}
{
  "name": "Half & Half",
  "class": "half_and_half_ah",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "top",
          "label": "Top"
        },
        {
          "type": "text",
          "id": "bottom",
          "label": "Bottom"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Half & Half"
    }
  ]
}
{% endschema %}

