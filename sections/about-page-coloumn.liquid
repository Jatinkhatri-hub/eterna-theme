<section class="about-content">
  <div class="carlos-container"> 
    {% for block in section.blocks %}
      {% assign mod = forloop.index | modulo: 2 %}
      <div class="carlos-story-wrap" style="display: flex;">
        {% if mod == 0 %}
          <div class="story-contebt bg-scheme-background text-scheme-text">
            <div class="text-left break-words w-full">
              <h2 class="font-heading text-2xl">{{ block.settings.heading }}</h2>
              <div class="rte text-base mt-4 font-">
                <p>{{ block.settings.descrption }}</p>
              </div>
            </div>
          </div>
          <div class="story-main-image">
            <img class="story-img" src="{{ block.settings.image | img_url:'master' }}" alt="" width="100%" height="100%">
          </div>          
         {% else %}          
          <div class="story-main-image">
            <img class="story-img" src="{{ block.settings.image | img_url:'master' }}" alt="" width="100%" height="100%">
          </div>
          <div class="story-contebt bg-scheme-background text-scheme-text">
            <div class="text-left break-words w-full">
              <h2 class="font-heading text-2xl">{{ block.settings.heading }}</h2>
              <div class="rte text-base mt-4 font-">
                <p>{{ block.settings.descrption }}</p>
              </div>
            </div>
          </div>          
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "about content",
    "blocks": [
        {
          "name": "repeater_blocks",
          "type": "repeater_blocks",
          "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "descrption",
            "label": "Description"
          }
        ]
      }
    ]
  }
{% endschema %}