<div id="{{ section.id }}" class="carlos-w-full">
  <div class="carlos-section-border"></div>
  <div class="carlos-container carlos-flex carlos-flex-wrap carlos-x-padding pb-theme pt-theme">
    <div class="carlos-text-xl carlos-uppercase carlos-w-1/3 carlos-mobile-text-center" style="text-align: center; padding-right:10px;">
      {{ section.settings.headline }}
    </div>
    <div class="carlos-flex carlos-w-2/3 icon-set-container carlos-space-between">
      {% for icon in product.metafields.carlos.thoughtfully_developed_icons.value %}
        <div class="carlos-flex carlos-flex-column carlos-align-center carlos-flex-wrap carlos-flex-gap-[5px] icon-set" style="padding: 10px;">
          <img src="{{ icon.image_url }}" width="100%" height="100%" loading="lazy">
          <span class="carlos-text-center" style="font-size: 0.67rem;">{{ icon.name }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="carlos-section-border"></div>
</div>

<style>
  .icon-set-container {
    flex-wrap: nowrap;
  }

  .icon-set img {
    width: 50px;
  }

  @media (min-width: 769px) {
    .icon-set {
      flex: 1;
    }
  }

  @media (max-width: 768px) {
    .icon-set-container {
      flex-wrap: wrap;
    }
    .icon-set {
      width: 50%;
    }
  }
</style>

{% schema %}
{
  "name": "Trusted Icons",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Trusted Icons"
    }
  ]
}
{% endschema %}