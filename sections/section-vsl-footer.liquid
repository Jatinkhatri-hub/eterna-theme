{{ 'section-vsl-footer.css' |  asset_url |  stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="vsl__footer-wrapper">
    {% for block in section.blocks %} 
      {% case block.type %}  
        {% when 'scientific_ref' %}
          <div class="vsl__footer-title">
            {{ block.settings.title }}
          </div>
          <div class="vsl__sci-ref-mobile-wrapper">
            <img src="{{ block.settings.image_mobile |  image_url: width: block.settings.image_mobile.width  }}" class="vsl__sci-ref-mobile-img">
          </div>
          <div class="vsl__sci-ref">

          </div>
        {% when 'footer_menu' %}
          <div class="vsl__footer-menu-wrapper">
            {%  for link in block.settings.list.links %} 
              <a href="{{ link.url }}" class="vsl__footer-item">
                {{ link.title }}
              </a>
            {% endfor %} 
          </div>
        {% when 'description' %}
          <div class="vsl__footer-description">
            {{ block.settings.description }}
          </div>
        {% when 'copyright' %}
          <p class="vsl__footer-copyright">
            {{ block.settings.text }}
          </p>
      {% endcase %}
    {% endfor %}

  </div>
</div>

{% schema %}
  {
    "name": "Vsl Footer",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Section Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "name": "Scientific References",
        "type": "scientific_ref",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Scientific References"
          },
          {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Image (Desktop)"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Image (Mobile)"
          }
        ]
      },
      {
        "name": "Footer Menu",
        "type": "footer_menu",
        "settings": [
          {
            "type": "link_list",
            "id": "list",
            "label": "Menu"
          }
        ]
      },
      {
        "name": "Description",
        "type": "description",
        "settings":  [
          {
            "type": "text",
            "id": "description",
            "label": "Info"
          }
        ]
      },
      {
        "name": "Copyright",
        "type": "copyright",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Copyright"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vsl Footer"
      }
    ]
  }
{% endschema %}