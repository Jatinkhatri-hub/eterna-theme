      "id": "label_bg_color",
      "label": "Label background color"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Label text color"
    },
    {
      "type": "color",
      "id": "results_bg",
      "label": "Results background color"
    },
    {
      "type": "color",
