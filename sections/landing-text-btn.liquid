<section class="content-section">
  <div class="carlos-container carlos-x-padding pb-theme pt-theme">
    {% if section.settings.heading != blank %}
    <div class="carlos-text-contain">
      <h2>{{ section.settings.heading }}</h2>
    </div>
      {% endif %}
    {% if section.settings.btn_name %}
    <div class="shop_enterna">
      <a href="{{ section.settings.btn_url }}" class="custom-shop-btn">{{ section.settings.btn_name }}</a>
    </div>
      {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Live Younger",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "text",
        "id": "btn_name",
        "label": "Button name"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}