<div id="{{ section.id }}" class="carlos-w-full">
  <div class="carlos-flex carlos-flex-wrap carlos-border-top carlos-mt-[50px]">
    <div class="carlos-w-1/3 carlos-x-padding pb-theme pt-theme border-right-desktop border-bottom-mobile">
      <div class="carlos-text-xl pb-theme pt-theme">
        {{ section.settings.title }}
      </div>
      <div class="pb-theme pt-theme carlos-text-sm">
        {{ section.settings.text }}
      </div>
      <a href="{{ section.settings.button_link }}" class="carlos-btn-black carlos-text-sm carlos-uppercase carlos-btn-arrow carlos-bold carlos-ws-nowrap carlos-inline-block" style="width: fit-content;">
      {{- section.settings.button_text -}}
      </a>
    </div>
    <div class="carlos-w-2/3 carlos-flex carlos-flex-row">
      <div class="carlos-flex carlos-flex-column carlos-w-full carlos-justify-center border-right-desktop border-bottom-mobile" style="padding: 30px 1.5rem;">
        <div class="carlos-hide-mobile" style="width: 100%; aspect-ratio: 1"></div>
        <img class="carlos-mb-[15px]" src="{{ section.settings.image_1 | img_url: "master" }}" width="100%" height="100%">
        <div class="carlos-bold carlos-text-md carlos-mb-[15px]">
          {{ section.settings.title_1 }}
        </div>
        <div>
          {{ section.settings.text_1 }}
        </div>
      </div>
      <div class="carlos-flex carlos-flex-column carlos-w-full carlos-justify-center border-right-desktop border-bottom-mobile" style="padding: 30px 1.5rem;">
        <div class="carlos-bold carlos-text-md carlos-mb-[15px]">
          {{ section.settings.title_2 }}
        </div>
        <div class="carlos-mb-[15px]">
          {{ section.settings.text_2 }}
        </div>
        <img class="carlos-mb-[15px]" src="{{ section.settings.image_2 | img_url: "master" }}" width="100%" height="100%">
      </div>
      <div class="carlos-flex carlos-flex-column carlos-w-full carlos-justify-center" style="padding: 30px 1.5rem;">
        <div class="carlos-hide-mobile" style="width: 100%; aspect-ratio: 1"></div>
        <img class="carlos-mb-[15px]" src="{{ section.settings.image_3 | img_url: "master" }}" width="100%" height="100%">
        <div class="carlos-bold carlos-text-md carlos-mb-[15px]">
          {{ section.settings.title_3 }}
        </div>
        <div>
          {{ section.settings.text_3 }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .border-right-desktop {
    border-right: 1px solid black;
  }
  
  @media (max-width: 768px) {
    #{{ section.id }} .carlos-w-2\/3 img {
      order: -1;
    }
    .border-right-desktop {
      border-right: none;
    }

    .border-bottom-mobile {
      border-bottom: 1px solid black;
    }

    #{{ section.id }} .carlos-w-2\/3 {
      flex-wrap: wrap;
    }
  }
</style>

