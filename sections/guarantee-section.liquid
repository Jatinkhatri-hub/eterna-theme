{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="guarantee-box">
    <div class="guarantee-img">
      <img src="{{ section.settings.guarantee_img | img_url : 'original' }}">
    </div>
    <p class="guarantee-line1">{{ section.settings.line_1 }}</p>
    <h3 class="guarantee-title">{{ section.settings.guarantee_title }}</h3>
    <h4 class="guarantee-stamp">{{ section.settings.guarantee_stamp }}</h4>
    <p class="guarantee-para">
      {{ section.settings.guarantee_para1 -}}
      <span class="guarantee_no">{{ section.settings.guarantee_no }}</span>or<span class="guarantee_mail">
        {{- section.settings.guarantee_mail -}}
      </span>
      {{- section.settings.guarantee_para2 }}
    </p>
  </div>
</div>
<style>
  .guarantee-box {
    max-width: 987.1px;
    /* width: 80%; */
    /* position: relative; */
    display: none;
    flex-direction: column;
    align-items: center;
    border: 4px solid #007386;
    margin: auto;
    gap: 10.9px;
    padding-bottom: 29.32px;
  }
  .guarantee-img {
    width: 218.73px;
    height: fit-content;
    /* position: absolute; */
    z-index: 10;
    left: 0;
    margin-top: -108.86px;
  }
  .guarantee-img img {
    width: 100%;
  }
  .guarantee-line1 {
    font-size: 20.3px;
    font-weight: 400;
    line-height: 25px;
    text-align: center;
    color: #393939;
    margin: 0;
  }
  .guarantee-title {
    font-size: 49.94px;
    font-weight: 700;
    line-height: 50px;
    text-align: center;
    color: #000000;
    margin: 0;
  }
  .guarantee-stamp {
    width: 100%;
    font-size: 101.47px;
    font-weight: 700;
    line-height: 85px;
    text-align: center;
    color: #ffffff;
    background-color: #007386;
    margin: 0;
    padding-top: 8px;
    padding-bottom: 8px;
  }
  .guarantee-para {
    font-size: 19.98px;
    font-weight: 400;
    line-height: 26px;
    text-align: center;
    color: #393939;
    margin: 0;
  }
  .guarantee-para span {
    font-size: 19.98px;
    font-weight: 400;
    line-height: 26px;
    text-align: center;
    color: #000000;
    text-decoration: underline;
    margin: 0;
  }
  @media (min-width: 319px) and (max-width: 520px) {
    .guarantee-box {
      width: 90%;
      max-width: 316.88px;
    }
    .guarantee-img {
      width: 105.62px;
      margin-top: -52.815px;
    }
    .guarantee-line1 {
      font-size: 13px;
      line-height: 22px;
    }
    .guarantee-title {
      font-size: 17.6px;
      line-height: 28px;
    }
    .guarantee-stamp {
      font-size: 32.5px;
      line-height: 40px;
      padding-top: 3.25px;
      padding-bottom: 3.25px;
    }
    .guarantee-para {
      font-size: 12.59px;
      line-height: 24px;
      padding: 0 10px;
    }
    .guarantee-para span {
      font-size: 12.59px;
      line-height: 24px;
    }
  }
</style>
{% schema %}
{
  "name": "Guarantee",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
