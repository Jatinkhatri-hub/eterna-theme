    {
      "type": "text",
      "id": "guarantee_stamp",
      "label": "main line",
      "default": "Guarantee"
    },
    {
      "type": "textarea",
      "id": "guarantee_para1",
      "label": "paragraph",
      "default": "Your ReActivate order is covered for a full year. So give ReActivate a try today, and if you’re not thrilled with how smooth, supple, and firm your skin looks and feels in a matter of days… then simply contact our English-speaking customer support at "
    },
    {
      "type": "text",
      "id": "guarantee_no",
      "label": "contact",
      "default": "1-888-281-6816 "
    },
    {
      "type": "text",
      "id": "guarantee_mail",
      "label": "mail",
      "default": " mail@suncoastsciences"
    },
    {
      "type": "textarea",
      "id": "guarantee_para2",
      "label": "paragraph 2",
      "default": ", and you’ll get a full refund. No questions, no hoops, no qualifications. Make your selection now, and together, let’s get started on the transformation of a lifetime."
    }
  ],
  "presets": [
    {
      "name": "Guarantee"
    }
  ]
}
{% endschema %}
