          <div class="carlos-absolute carlos-w-full carlos-full-ugc-video-title carlos-flex carlos-align-center carlos-justify-center carlos-flex-gap-[5px] carlos-p-sm carlos-top-0" style="z-index: 1;">
            <img class="carlos-h-full" src="{{ metaobject.profile_picture.value | img_url: 'master' }}" width="100%" height="100%" loading="lazy" style="width: 5%; min-width: 34px; border-radius: 100%;">
            <div style="font-weight: 500; color: white; font-size: 16px;">
              {{ metaobject.name.value }}
            </div>
          </div>
          <video class="carlos-w-full carlos-h-full carlos-full-ugc-video" autoplay="true" muted="true" playsinline="" controls="true" controlsList="nodownload" src="{{ metaobject.video_review | file_url }}" style="object-fit: cover; border-radius: 10px; box-shadow: 5px 9px 10px 0 rgba(0,0,0,.1);"></video>
        </div>
        <div class="carlos-w-full carlos-inner-left-margin" data-color-scheme="primary">
          {% assign product = metaobject.product.value %}
