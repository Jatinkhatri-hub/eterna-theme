            <img src="{{ product.featured_image | img_url: 'master' }}" width="100%" height="100%" loading="lazy" style="width: 100%; aspect-ratio: 1; object-fit: contain; max-width: 125px;">
            <div class="carlos-flex-1">
              <div class="carlos-bold carlos-uppercase" style="line-height: 1; font-size: var(--carlos-fontSizes-lg);">{{ product.title }}</div>
              <div class="carlos-text-xs">{{ product.metafields.carlos.product_info.value }}</div>
              {% render 'okendo-reviews-product-rating-summary', product: product %}
            </div>
          </a>
          <div class="carlos-text-xs carlos-mb-[15px]">{{ product.description }}</div>
          <button class="add-to-cart carlos-modal-btn px-2 py-4 w-full bg-scheme-accent text-scheme-accent-overlay carlos-bold carlos-uppercase carlos-flex carlos-justify-center carlos-flex-row carlos-align-center carlos-flex-gap-[5px]" data-modal-id="{{ product.id }}">
            <span class="add-to-cart-text">Add to cart</span>
            <span class="add-to-cart-separator"></span>
            <span class="add-to-cart-price">
              {% for variant in product.variants %}
                {% if variant.title contains 'onetime / 1' %}
                  {{ variant.price | money_without_trailing_zeros }}
                {% endif %}
              {% endfor %}
            </span>
          </button>
          {% render 'quick-add-modal', product: product %}
