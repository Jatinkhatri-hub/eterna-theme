            <div class="carlos-flex carlos-flex-gap-[20px] carlos-mb-[15px] carlos-align-center carlos-inner-wrapper carlos-profile-border">
            <img class="carlos-h-full" src="{{ metaobject.profile_picture.value | img_url: 'master' }}" width="100%" height="100%" loading="lazy" style="width: 100%; max-width: 80px; border-radius: 100%;">
            <div class="carlos-flex-1">
              <div class="carlos-bold carlos-text-sm carlos-mb-[5px]">{{ metaobject.name.value }}</div>
              {% for social_media in metaobject.social_media.value %}
                <div class="carlos-bold carlos-social-media carlos-mb-[5px]">
                  {% case social_media.platform %}
                    {% when 'tiktok' %}
                      {% render 'icon-tiktok' %}
                    {% when 'instagram' %}
                      {% render 'icon-instagram' %}
                    {% when 'facebook' %}
                      {% render 'icon-facebook' %}
                    {% when 'twitter' %}
                      {% render 'icon-twitter' %}
                  {% endcase %}
                  <span>{{ social_media.username }}</span>
                  <span>•</span>
                  <span>{{ social_media.followers }} followers</span>
                </div>
              {% endfor %}
              <div>{{ metaobject.about.value }}</div>
            </div>
          </div>
            <div class="carlos-inner-wrapper">
            <div class="carlos-w-full carlos-p-sm carlos-text-center" style="background: #fafafa; font-weight: 600; border-radius: 12px; font-size: var(--carlos-fontSizes-sm);">"{{ metaobject.quote.value }}"</div>
          </div>
          </div>
          <div class="carlos-w-full:sm carlos-w-half:md carlos-w-full:lg carlos-bg-grey carlos-flex">
            <div class="ugc-image-slider carlos-p-lg" style="width: calc(100% - 80px); margin: auto;">
              {% for images in metaobject.review_images.value %}
                <img src="{{ images | img_url: 'master' }}" width="100%" height="100%" loading="lazy" style="aspect-ratio: 1; border-radius: 12px;">
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #{{ section.id }} .slick-prev {
    left: -20px;
    transform: translate(0, -50%);
  }

  #{{ section.id }} .slick-next {
    right: -20px;
    transform: translate(0, -50%) rotate(180deg);
  }
  
  .carlos-inner-wrapper {
    padding: 20px;
  }

  .carlos-inner-left-margin {
    margin-left: 20px;
  }
  
  .carlos-social-media svg {
    display: inline-block;
    width: 18px;
  }

  .carlos-hero-border {
    border: 1px solid #e9e9e9;
    border-radius: 10px;
  }
  
  @media (max-width: 768px) {
    .carlos-full-ugc-video {
      margin-left: -15px;
      margin-right: -15px;
      margin-top: calc(-1 * var(--spacing) / 2);
      border-radius: 0!important;
      max-width: none;
      width: calc(100% + 30px);
    }

    .carlos-w-full\:sm {
      width: 100%!important;
    }

    .carlos-full-ugc-video-title {
      margin-top: calc(-1 * var(--spacing) / 2);
    }

    .carlos-flex-wrap\:sm {
      flex-wrap: wrap;
    }

    .carlos-inner-left-margin {
      margin-left: 0;
    }

    .carlos-mb-\[20px\]\:sm {
      margin-bottom: 20px;
    }

    .carlos-mb-\[-40px\] {
      margin-bottom: -40px;
    }

    .carlos-bg-grey {
      border-top-right-radius: 0!important;
      border-bottom-left-radius: 10px;
      background: #fafafa
    }
  }

  @media (min-width: 769px) {
    .carlos-mb-\[20px\]\:md {
      margin-bottom: 20px;
    }
  }

  @media (max-width: 1440px) {
    .carlos-w-half\:md {
      width: 50%;
    }
    
    .carlos-w-full\:md {
      width: 100%;
    }

    .carlos-flex-wrap\:md {
      flex-wrap: wrap;
    }

    .carlos-profile-border {
      border-bottom: 1px solid #e9e9e9;
    }

    .carlos-bg-grey {
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
      background: #fafafa
    }
  }

  @media (min-width: 1441px) {
    .carlos-mb-\[20px\]\:md {
      margin-bottom: 0;
    }
    
    .carlos-inner-right-margin {
      margin-right: 20px;
    }

    .carlos-first-order {
      order: -1;
    }

    .carlos-w-full\:lg {
      width: 100%;
    }
  }
</style>

