      "default": "Heading"
    },
    {
      "type": "text",
      "id": "info_heading",
      "label": "Info Heading",
      "default": "As Seen On"
    },
    {
      "type": "image_picker",
      "id": "as_seen",
      "label": "Featured On Image"
    }
  ],
  "presets": [
    {
      "name": "Buy box vsl"
    }
  ]
}
{% endschema %}
