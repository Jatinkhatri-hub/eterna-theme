<div class="vsl__banner-wrapper">
  <div class="vsl__banner-header">
    {{ section.settings.section_heading }}
  </div>
  <div class="vsl__content-wrapper">
    <div id="vid_6743f9f26fbe5b000a16deeb" style="position: relative; width: 100%; padding: 125% 0 0;">
      <img
        id="thumb_6743f9f26fbe5b000a16deeb"
        src="https://images.converteai.net/aed835e2-ab6e-4849-98d2-739023ca6fe0/players/6743f9f26fbe5b000a16deeb/thumbnail.jpg"
        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; display: block;"
        alt="thumbnail"
      >
      <div
        id="backdrop_6743f9f26fbe5b000a16deeb"
        style=" -webkit-backdrop-filter: blur(5px); backdrop-filter: blur(5px); position: absolute; top: 0; height: 100%; width: 100%; "
      ></div>
    </div>
    <div class="vsl__info-wrapper">
      <div class="vsl__info-header">
        <div class="vsl__info-vertical-divider"></div>
        <span class="vsl__info-header-text">{{ section.settings.info_heading }}</span>
        <div class="vsl__info-vertical-divider"></div>
      </div>
      <div class="vsl__featured-on-img-wrapper">
        <img src="{{ section.settings.as_seen |  image_url: width: section.settings.as_seen.width }}" class="" >
      </div>


    </div>
  </div>

</div>

<style>
  .vsl__banner-header {
    background-color: #147386;
    color: white;
    font: 31px 'Sailec Bold' !important;
    text-align: center;
    width: 100%;
    padding: 10px;
  }

  .vsl__content-wrapper {
    display: grid;
    grid-template-columns: 400px 280px;
    justify-content: center;
    gap: 50px;
    margin-top: 22px;
  }

  .vsl__info-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .vsl__info-header {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
  }

  .vsl__info-vertical-divider {
    display: block;
    border: .7px solid #3C3C3C;
    width: 80px;
  }

  .vsl__info-header-text {
    font: 18px 'Sailec Medium' !important;

  }

  .vsl__featured-on-img-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 280px;
    height: 26px;

  }

  .vsl__feature-on-img {
    width: 280px;
    height: 26px;
    object-fit: cover;
  }

</style>

<script type="text/javascript" id="scr_6743f9f26fbe5b000a16deeb">
  var s = document.createElement('script');
  (s.src =
    'https://scripts.converteai.net/aed835e2-ab6e-4849-98d2-739023ca6fe0/players/6743f9f26fbe5b000a16deeb/player.js'),
    (s.async = !0),
    document.head.appendChild(s);
</script>
<style>
  .elementor-element:has(#smartplayer) {
    width: 100%;
  }
</style>

