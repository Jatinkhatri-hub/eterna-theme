<div id="{{ section.id }}" class="carlos-w-full">
  <div class="carlos-container carlos-flex carlos-flex-wrap pb-theme pt-theme">
    <div class="carlos-w-1/3 carlos-text-xl carlos-mobile-text-center">
      {{ section.settings.title }}
    </div>
    <div class="carlos-w-2/3">
      {% for faq in product.metafields.carlos.faq_json.value %}
      <div style="padding: 20px 20px; border-bottom: 1px solid #E1E1E1;">
        <div class="carlos-flex carlos-space-between faq-question accordion">
          <h2 class="carlos-text-sm" style="width: calc(100% - 20px);">
            <span>
              {{ faq.question }}
            </span>
          </h2>
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" style="width: 20px; height: 20px;" version="1.1" viewBox="0 0 330 330" xml:space="preserve">
            <path d="M325.606,229.393l-150.004-150C172.79,76.58,168.974,75,164.996,75c-3.979,0-7.794,1.581-10.607,4.394  l-149.996,150c-5.858,5.858-5.858,15.355,0,21.213c5.857,5.857,15.355,5.858,21.213,0l139.39-139.393l139.397,139.393  C307.322,253.536,311.161,255,315,255c3.839,0,7.678-1.464,10.607-4.394C331.464,244.748,331.464,235.251,325.606,229.393z"/></path>
          </svg>
        </div>
        <div class="accordion-content">
          <p class="carlos-text-xs" style="margin: 10px 0;">{{ faq.answer }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ | JSON",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "FAQ | JSON"
    }
  ]
}
{% endschema %}