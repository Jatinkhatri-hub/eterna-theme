            <div class="carlos-flex carlos-w-full">
              {{ block.settings.text_3 }}
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    var $window = $(window);

    function checkWidth() {
      var windowsize = $window.width();
      if (windowsize < 768) {
        $('.fancy-table-slider').slick({
          arrows: false,
          dots: true,
          swipeToSlide: true,
          loop: false
        });
      } else {
        $('.fancy-table-slider').slick('unslick');
      }
    }
    checkWidth();
    $(window).resize(checkWidth);
  });
</script>

<style>
  @media (max-width: 768px) {
    .fancy-table-content, .fancy-table-content-arrow {
      flex-direction: column;
    }

    .fancy-table-content img {
      transform: rotate(90deg);
      margin: 20px 0;
    }

    .first-fancy-content p {
      font-size: 1.2rem;
    }

    #{{ section.id }} .carlos-border {
      border: none;
    }

    .fancy-table-content {
      border: 1px solid black;
      border-radius: 8px;
      margin: 0 10px;
    }
  }
  
  .fancy-table-content:not(:last-of-type) {
    border-bottom: 1px solid black;
  }
</style>

