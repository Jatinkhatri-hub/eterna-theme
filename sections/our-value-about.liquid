<section class="our-value-sec" style="background-color: #E4EAEF;">
  <div class="carlos-container">  
    <div class="carlos-story-wrap" style="display: flex;">     
      <div class="story-contebt bg-scheme-background text-scheme-text">
        <div class="text-left break-words w-full">
          <h2 class="font-heading text-2xl">{{ section.settings.heading }}</h2>
          <div class="rte text-base mt-4 font-">
            {% for block in section.blocks %}
            <h5> {{ block.settings.title }}</h5>
            <p>{{ block.settings.detail }}</p>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="story-main-image">
        <img class="story-img" src="{{ section.settings.image | img_url:'master' }}" alt="" width="100%" height="100%">
      </div>
  </div>
  </div>
</section>

{% schema %}
  {
    "name": "our-value",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }      
    ],
    "blocks": [
      {
        "name": "list",
        "type": "list",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
           {
            "type": "text",
            "id": "detail",
            "label": "detail"
          }
        ]
      }
    ]
  }
{% endschema %}