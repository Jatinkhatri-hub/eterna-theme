<div id="{{ section.id }}" class="carlos-w-full carlos-relative carlos-text-white carlos-bg-nr carlos-bg-cover carlos-x-padding pt-theme-double pb-theme-double">
  {% if section.settings.video_url != blank %}
  <video class="carlos-w-full carlos-h-full carlos-full-screen carlos-absolute carlos-top-0" loading="lazy" preload="metadata" type="video/mp4" muted loop autoplay data-no-fullscreen="true" webkit-playsinline playsinline poster="{{ section.settings.image | img_url: 'master' }}" src="{{ section.settings.video_url }}" style="object-fit: cover;width:100%;height:100%;"></video>
  {% endif %}
  <div class="carlos-container carlos-relative carlos-flex carlos-flex-column carlos-flex-gap-[15px]">
    <div class="carlos-uppercase carlos-text-xxl carlos-border-white carlos-border-bottom">
      <div class="carlos-text-left carlos-bold">{{ section.settings.heading }}</div>
      <div class="carlos-text-right">{{ section.settings.subheading }}</div>
    </div>
    <div class="carlos-w-half">
      <div class="carlos-mb-[15px]">{{ section.settings.text }}</div>
      <a href="{{ section.settings.cta_link }}" class="carlos-btn-white carlos-inline-block carlos-uppercase carlos-bold">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</div>
{% unless section.settings.video_url != blank %}
<style>
  #{{ section.id }} {
    background-image: url('{{ section.settings.image | img_url: 'master' }}');
  }
</style>
{% endunless %}

{% schema %}
{
  "name": "Main Hero",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image",
      "info": "1800 x 800px .jpg recommended"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type":      "header",
      "content":   "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image with text overlay"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subeading",
      "default": "Image with text overlay"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type":      "header",
      "content":   "Call to action"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Main Hero"
    }
  ]
}
{% endschema %}
