<section class="testimonial-slider-section">
  <div class="carlos-container carlos-x-padding pb-theme pt-theme">
    {% if section.settings.heading != blank %}
    <div class="testimonial-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>
      {% endif %}
    <div class="slider-testimonials">
      {% for block in section.blocks %}
         {% if block.settings.review %}
            <div class="testimonial-wrapp">       
              <p><span>
                  <img class="columnicon-1" src="{{ block.settings.icon_1 | img_url: 'master' }}" width="100%" height="100%"/>
                  </span>{{ block.settings.review }}
              </p>
              <div class="verified">
                  <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%"/>
                  <p class="varefied">{{ block.settings.verified }}</p>
                  <p class="name-testimonial">{{ block.settings.name }}</p>
                </div>
            </div>
           {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
<script defer>
  $(document).ready(function() {
     $('.slider-testimonials').slick({
      arrows: true,
      dots: true,
      slidesToShow: 2,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000,
      responsive: [
      {
        breakpoint: 767,
        settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
    });
  })
</script>
{% schema %}
  {
    "name": "Testimonial Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
          {
            "name": "Testimonials",
            "type": "testimonials",
            "settings": [
              {
            "type": "image_picker",
            "id": "icon_1",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "review",
            "label": "Review"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "verified",
            "label": "Verified Buyer"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          }
        ]
      }
    ]
  }
{% endschema %}