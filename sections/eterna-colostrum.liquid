<style>
  .container {
    margin-left: auto;
    margin-right: auto;
    width: 1200px;
  }
  .colostrum-section .right-side-img {
    width: 540px;
    height: 348px;
    border: 1px solid #000;
  }
  .colostrum-section {
    padding: 70px 0px;
    border-bottom: 1px solid #000;
  }
  .colostrum-section h2 {
    font-size: 48px;
    line-height: 56px;
    text-align: center;
  }

  .colostrum-section p {
    margin-top: 30px;
    font-size: 18px;
    line-height: 26px;
    text-align: center;
    margin-bottom: 40px;
  }
  .colostrum-section a.shopnow_btn {
    background-color: #000;
    color: #fff;
    width: 400px;
    padding: 10px 170px;
  }
</style>


<section class="colostrum-section">
  <div class="container">
    <div class="carlos-flex carlos-flex-wrap">
      <div class="carlos-w-half" style="text-align: center;">
      {% if section.settings.heading != blank %}
        <div class="colostrum-text-heading">
          <h2 class="colostrum-heading">{{ section.settings.heading }}</h2>
        </div>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="colostrum-text-description">
          <p>{{ section.settings.description }}</p>
        </div>
      {% endif %}
        <a href="{{ section.settings.btn_link }}" class="shopnow_btn"> {{ section.settings.btn_name }} </a>        
      </div>
      <div class="carlos-w-half">
      {% if section.settings.image != blank %}
        <div class="right-side-img">
          <img src="{{ section.settings.image | img_url: 'master' }}" height="100%" width="100%"/>
        </div>
      {% endif %}
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "colostrum section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "btn_name",
        "label": "Button Name"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Right Image"
      }
    ]
  }
{% endschema %}