<div id="hallmark" class="carlos-w-full" style="background: {{ section.settings.background_color }}">
  <div class="carlos-container carlos-x-padding pb-theme pt-theme">
    <div class="text-content-slider carlos-text-center">
      {% if section.settings.heading != blank %}
     <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
      {% endif %}
    </div>
    <div class="icon-block-slider">
      {% for block in section.blocks %}
        <div>
          <div class="carlos-w-full">
            <div class="icon-block-slide carlos-text-center" style="box-shadow: 2px 5px 15px 0 rgba(0,0,0,.07000000000000001); border-radius: 12px; background: white;">
              {% if block.settings.image != blank %}
              <div class="mark_image">
                <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" loading="lazy">
              </div>
                {% endif %}
              <div class="mark-content">
                {% if block.settings.title != blank %}
              <h2>{{ block.settings.title }}</h2>
                  {% endif %}
                {% if block.settings.detail != blank %}
                  <p>{{ block.settings.detail }}</p>
                {% endif %}
                <h6>{{ block.settings.list_heading }}</h6>
                <ul>
                  {% if block.settings.point != blank %}
                  <li>{{ block.settings.point }}</li>{% endif %}
                  {% if block.settings.point2 != blank %}
                <li>{{ block.settings.point2 }}</li>{% endif %}
                    {% if block.settings.point3 != blank %}
                <li>{{ block.settings.point3 }}</li>
                      {% endif %}
                 {% if block.settings.point4 != blank %}
                <li>{{ block.settings.point4 }}</li>
                      {% endif %}
                 {% if block.settings.point5 != blank %}
                <li>{{ block.settings.point5 }}</li>
                      {% endif %}</ul>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #hallmark .slick-track {
    display: flex;
    margin-bottom: 10px;
  }
  
  #hallmark .slick-slide {
    display: flex;
    height: auto;
  }
  
  .icon-block-slide {
    padding: 30px;
    height: 100%;
  }

  @media (min-width: 769px) {
    .icon-block-slider {
      width: calc(100% - 50px);
      margin: auto;
    }
  }

  @media (max-width: 768px) {
    .icon-block-slide {
      padding: 20px 25px;
    }
  }
</style>

<script defer>
  $(document).ready(function() {
    $('#hallmark .icon-block-slider').slick({
      arrows: true,
      dots: true,
      swipeToSlide: true,
      infinite: false,
      slidesToShow: 3,
      slidesToScroll: 3,
      responsive: [
        {
           breakpoint: 992,
           settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            centerMode: true,
            centerPadding: '15px'
          }
        }
      ]
    });
  })
</script>

