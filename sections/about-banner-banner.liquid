<section class="about-banner-sec">
  <div class="banner-image">
    <img class="background_image" src="{{ section.settings.background_image | img_url:'master' }}" width="100%" height="100%"/>
  </div>
      <div class="container">
        <div class="content-text-about">
          <h3>{{ section.settings.heading }}</h3>
          <p>{{ section.settings.content }}</p>
        </div>
      </div>
</section>



{% schema %}
  {
    "name": "Banner Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
         "type": "text",
        "id": "heading",
        "label": "Main Heading"
      },
      {
         "type": "text",
        "id": "content",
        "label": "description"
      }     
    ]
  }
{% endschema %}