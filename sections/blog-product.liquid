{% assign product = section.settings.product %}
<div class="carlos-w-full" data-color-scheme="primary">
  <div class="carlos-container carlos-x-padding">
    <div class="carlos-section-border"></div>
  </div>
  <div class="carlos-container carlos-x-padding py-4">
    <div class="carlos-flex carlos-flex-gap-[15px]">
      <div class="carlos-w-half carlos-mb-[10px]">
        <img
          src="{{ product.featured_image | image_url }}"
          width="100%"
          height="100%"
          loading="ladzy"
          style="aspect-ratio: 1; object-fit: cover; background: #f2f3f0;">
      </div>
      <div class="carlos-w-half">
        <div class="carlos-flex carlos-flex-column carlos-flex-gap-[10px] carlos-h-full">
          <div class="carlos-text-lg" style="line-height: 1.1;">{{ product.title }}</div>
          {% render 'okendo-reviews-product-rating-summary', product: product %}
          <p class="carlos-text-md">{{ product.metafields.carlos.product_info }}</p>
            <a
              href="{{ section.settings.btn_url }}"
              class="carlos-hide-mobile add-to-cart px-2 py-4 w-full bg-scheme-accent text-scheme-accent-overlay carlos-bold carlos-uppercase carlos-flex carlos-justify-center carlos-align-center"
              style="margin-top: auto; cursor: pointer">
              {{ section.settings.btn_name }}
            </a>

        </div>
      </div>
    </div>
    <a
        href="{{ section.settings.btn_url }}"
        class="carlos-hide-desktop add-to-cart px-2 py-4 w-full bg-scheme-accent text-scheme-accent-overlay carlos-bold carlos-uppercase carlos-flex carlos-justify-center carlos-align-center"
        style="margin-top: auto; cursor: pointer">
           {{ section.settings.btn_name }}
      </a>
  </div>
</div>
{% schema %}
{
  "name": "Blog Product",
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Blog Product"
    }
  ]
}
{% endschema %}
