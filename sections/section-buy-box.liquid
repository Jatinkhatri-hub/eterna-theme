{{ 'section-buy-box.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="buy-box__section-wrapper">
      {% for block in section.blocks %}
        {%  case block.type %}  
          {% when 'badge' %}
            <div class="buy-box__section-badge">
              <h2 class="section-badge__title">{{ block.settings.title }}</h2>
              <span class="section-badge__subinfo" style="color: white;">{{ block.settings.sub_info }}</span>
            </div>
          {% when 'buybox' %}
            <div class="buy-box__cards-wrapper">
              {% for variant in block.settings.product.variants %}
                <div class="buy-box__card">
                  <div class="buy-box__card-header">
                    <h2 class="card__header-title">Basic Package</h2>
                    <p class="card__header-subtitle">1-Month Supply (1 Bottle)</p>
                  </div>
                  <div class="card__product-img-wrapper">
                    <img src="{{  }}">
                  </div>
                </div>
              {% endfor %}
            </div>
            {% comment %} <div class="buy-box__cards-wrapper">
              {% assign packageTitles = block.settings.product.metafields.custom.package_subtitle %} 

              {% if packageTitles.size > 0 %}
                {% for variant in block.settings.product.variants %}
                  <div class="buy-box__card">
                    <div class="buy-box__card-header">
                      {% assign index = forloop.index0 %} <!-- Get the current loop index -->
                      {% if index < packageTitles.size %}
                        {{ packageTitles[index] }}
                      {% else %}
                        No title available
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              {% else %}
                <p>No package titles available.</p>
              {% endif %}
            </div> {% endcomment %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Section Buy Box",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Section Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "name": "Badge",
        "type": "badge",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "title",
            "label": "Title",
            "default": "Black Friday Sale"
          }, {
            "type": "text",
            "id": "sub_info",
            "label": "Sub Info",
            "default": "subinfo"
          }
        ]
      },
      {
        "name": "Buy Box",
        "type": "buybox",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Section Buy Box"
      }
    ]
  }
{% endschema %}