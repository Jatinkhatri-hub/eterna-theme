<section class="used_amara">
  <div class="container">
    <div class="main_heading">
      {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
        {% endif %}
    </div>
  <div class="bio-data">
    <div class="row">
      <div class="profile_img">
        <img src="{{ section.settings.pro_img  | img_url: "master" }}" width="100%" height="100%">
      </div>
      <div class="profile-data">
        <h6>By</h6>
        <h4>{{ section.settings.name }}</h4>
        <h5>{{ section.settings.date }}</h5>
        <h6>{{ section.settings.subheading }}</h6>
      </div>
    </div>
  </div>
    <div class="content-detail">
      {% for block in section.blocks %}
        <p>{{ block.settings.paragraph }}</p>
      {% endfor %}
    </div>
  </div>

</section>



{% schema %}
  {
    "name": "Amara Used",
    "settings": [
      {
        "type": "image_picker",
        "id": "pro_img",
        "label": "Profile Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "name",
        "label": "Name"
      },
      {
        "type": "text",
        "id": "date",
        "label": "Date"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
      },
    ],
    "blocks": [
      {
        "type": "details",
        "name": "Details",
        "settings": [
          {
            "type": "text",
            "id": "paragraph",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}