<style>
  .mobile_img {
    display: none;
  }
  .background-img_desktop {
    display: block;
  }
 .inner-banner {
    background-repeat: no-repeat;
    background-position: center;
    min-height: 650px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
   background-size: contain;
  }
  .banner-content {
     max-width: 660px;
    display: flex;
    width: 76%;
    justify-content: center;
    flex-direction: column;
    margin: 30px auto 10px;
    padding: 0;
    text-align: center;
  }
  .question-landing-title.ng-tns-c57-2 {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.09;
    padding-bottom: 20px;
  }
  .question-landing-subtitle.ng-tns-c57-2 {
    font-size: 18px;
    line-height: 1.33;
    letter-spacing: -.2px;
    min-width: 240px;
    padding: 0;
    text-align: center;
    margin: 0 auto;
  }
  .quiz-button {
    margin: 30px 0px;
  }
  .mb-5 {
    margin-bottom: 5px;
  }
  .quiz-button button {
    letter-spacing: .5px;
    font-weight: 600;
    font-size: 16px;
    color: #fff;
    background: #000;
    border-radius: 10px;
    display: inline-block;
    position: relative!important;
    padding: 15px 60px 15px 60px;
  }
  span.fw-700 {
    font-weight: 700;
  }
  div#shopify-section-sections--19352879563032__footer {
    display: none;
  }
 @media only screen and (max-width:767px){
   .mobile_img {
    display: block;
  }
   .inner-banner{
      background-image: none !important;
     display: block;
   }
 }
</style>
<section class="inner-banner" style="background-image: url('{{ section.settings.desktop_img | img_url: 'master' }}')">
  <div class="mobile_img"> <img src="{{ section.settings.mobile_image | img_url: 'master' }}" width="100%" height="100%"/></div>
        <div class="quiz-section-start">
            <div class="banner-wrap">
                <div class="banner-content">
                   <div class="question-landing-title ng-tns-c57-2">
                      {{ section.settings.heading }}
                   </div>
                    <div class="question-landing-subtitle ng-tns-c57-2">
                      <div class="mb-5">
                        <span class="fw-700">{{ section.settings.title }}</span>
                       {{ section.settings.text }}
                      </div>
                     {{ section.settings.description }}
                    </div>
                    <div class="quiz-button text-center next-button landing-button-wrapper ng-tns-c57-2">
                      <button id="qz-next-button" class="mat-focus-indicator ng-tns-c57-2 mat-flat-button mat-button-base mat-primary">
                        <span class="mat-button-wrapper">{{ section.settings.button_name }} </span>
                      </button>
                    </div>
                </div>
            </div>
        </div>
</section>

  <script defer>
    jQuery(document).ready(function(){
      $('#qz-next-button').on('click',function(){
         window.location.href = 'https://tryeterna.com/pages/quiz';
      });
    });
    
  </script>
{% schema %}
  {
    "name": "quiz-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_img",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Iamge"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
       {
        "type": "text",
        "id": "text",
        "label": "text"
      },
       {
        "type": "text",
        "id": "description",
        "label": "Description"
      },
       {
        "type": "text",
        "id": "button_name",
        "label": "Button Name"
      }
    ]
  }
{% endschema %}