{% assign id = block.id %}
<div class="carlos-custom-tab-container" {{ block.shopify_attributes }}>
  <div class="carlos-custom-tab">
    <div data-modal-id="{{ id }}" class="carlos-flex carlos-space-between {% if block.settings.popup == false %}faq-question accordion{% else %}carlos-modal-btn{% endif %}">
      <h2 class="carlos-uppercase">
        <span>
        {{ block.settings.heading }}
        </span>
      </h2>
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" style="width: 20px; height: 20px; transition: 0.3s;" version="1.1" viewBox="0 0 330 330" xml:space="preserve">
        <path d="M325.606,229.393l-150.004-150C172.79,76.58,168.974,75,164.996,75c-3.979,0-7.794,1.581-10.607,4.394  l-149.996,150c-5.858,5.858-5.858,15.355,0,21.213c5.857,5.857,15.355,5.858,21.213,0l139.39-139.393l139.397,139.393  C307.322,253.536,311.161,255,315,255c3.839,0,7.678-1.464,10.607-4.394C331.464,244.748,331.464,235.251,325.606,229.393z"></path>
      </svg>
    </div>
   {% capture content %}
      {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" loading="lazy"/>
      {% endif %}
      <p>{{ block.settings.content }}</p>
      {{ block.settings.page.content }}
    {% endcapture %}
    
    {% if block.settings.popup == false %}
      <div class="accordion-content carlos-text-sm">
      {{ content }}
       </div>
    
    {% else %}
      <div class="ingredent_popup_data" style="display: none;"> {{ content }}</div>
    {% comment %}
      {% render 'modal', id: id, content: content %}
       {% endcomment %}
      {% endif %}
  </div>
</div>
